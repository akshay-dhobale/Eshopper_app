
<%= render 'home/header' %>
<section><!--form-->
  <div class="container card">
    <div class="row bg-red">
      <div class="col-sm-4 col-sm-offset-4 bg-dark">
        <div class="login-form">          
          <h2 class="card-title">Edit Account</h2>
          <%= form_for @user do |f| %>
          <%#= devise_error_messages! %>
            <%= f.label :Firstname %><br />
            <%= f.text_field :firstname, autofocus: true %>

            <%= f.label :Lastname %><br />
            <%= f.text_field :lastname %>

            <button type="submit" class="btn btn-default col-sm-offset-4 ">Update</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render'/home/footer' %>


