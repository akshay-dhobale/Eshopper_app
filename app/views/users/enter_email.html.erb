<%= render "/home/header"%>
<div class="container card">
  <div class="row bg-red">
    <div class="col-sm-4 col-sm-offset-4 bg-dark">
	    <div class="login-form">
	    	<br><br>
	    	<p><span style="font-family:Trebuchet MS,Helvetica,sans-serif;"><span style="font-size:24px;"><strong><span style="color:#f39c12;">Enter New Email&nbsp;</span></strong></span></span></p><br><br><br>
	    	<% flash.each do |key, value| %>
	    	<div class="alert alert-danger fade in text-center"><%= notice %></div>
				<% end %>
				<%= form_for @user do |form|%>
				  <%= form.email_field :email %>
				  <button type="submit" class="btn btn-default">Update</button>
				<% end %>
			</div>
		</div>
	</div>
</div>