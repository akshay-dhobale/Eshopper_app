<body>
  <%= render "/home/header"%>
  <!-- <h2>Order Created</h2> -->
  <div class="alert alert-success text-center">
    Order Placed
  </div>
  <section id="cart_items">
    <div class="container">
      <div class="breadcrumbs">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li class="active">Your Order</li>
        </ol>
      </div>
      <h3>Order Created</h3>
      <div class="table-responsive cart_info well">
        <table class="table table-condensed">
          <thead>
            <tr class="cart_menu">
              <td class="image">Item</td>
              <td class="description"></td>
              <td class="price">Price</td>
              <td class="quantity">Quantity</td>
              <td class="total">Total</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% @order_detail_products.each do |item|%>
              <tr >
                <td class="cart_product">
                  <a href=""><%= image_tag item.product.product_images.first.prod_img.url, :height=>"200px" %></a>
                </td>
                <td class="cart_description">
                  <h4><a href=""><%= item.product.name %></a></h4>
                </td>
                <td class="cart_price">
                  <p>$<%= item.product.price %></p>
                </td>
                <td class="cart_quantity">
                  <%= item.quantity%>
                </td>
                <td class="cart_total">
                  <p class="cart_total_price" id = "price_<%= item.id%>" >
                  $<%= (item.product.price*item.quantity)  %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="pull-right well">
          Pay
          <p><b><strong>Grand total:</strong></b> $<%= @order.grand_total%></p>
          <p>Shipping Charges: $<%= @order.shipping_charges%></p>
        </div>
      </div>
    </div>
  </section> 
</body>

